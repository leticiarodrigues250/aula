        self.bairro = bairro
        self.cidade = cidade
        
class Conta:
    def __init__(self, conta, favorecido, limite):
        self.agencia = 1338
        self.conta = conta
        self.favorecido = favorecido
        self.saldo = 0.0
        self.limite = limite\
        
        
        
        
        

