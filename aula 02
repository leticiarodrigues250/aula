num1 = int(input("Digite um número inteiro:"))
num2 = int(input("Digite outro número inteiro:"))
operacao = input("Digite a operação (+ - * /):")

if operacao == '+':
    print(num1 + num2)
elif operacao == '-':
    print(num1 - num2)
elif operacao == '*':
    print(num1 * num2)
elif operacao == '/':
    print(num1 / num2)
    
    
