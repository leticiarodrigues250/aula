numero = int(input("digite um número: "))
if numero > 0:
    print("este numero é positivo")
elif numero < 0:
    print("este numero é negativo")
else:
    print ("você digitou zero!")
    
    
velocidade = float(input("digite a velocidade do carro: "))
if velocidade <= 60:
    print("está na velocidade permitida")
elif velocidade > 60 and velocidade < 80:
    print("está acima da velocidade")
elif velocidade > 80 and velocidade <120:
    print("está muito rápido")
else:
    print("VUADO!")
    
    
    
    
#imc = peso / altura **2

peso = float(input("informe seu peso: "))
altura = float(input("informe sua altura:"))

imc = peso / altura **2
print(imc)

if imc <= 18.5:
    print("abaixo do peso")
elif imc > 18.5 and imc <= 24.9:
    print("normal")
elif imc > 25 and imc <= 29.9:
        print("sobrepeso")
elif imc > 30 and imc <= 39.9:
        print("obesidade tipo 1")
else:
        print("obesidade mórbida")
        



secreto = 27
numero = int(input("informe um número inteiro (de 0 - 50): "))

if numero < secreto:
    print("Número é maior que esse")
elif numero > secreto:
    print("Número menor que esse")
else:
    print ("Parabéns! Você acertou")


temperatura = float(input("Digite a temperatura do paciente:"))
if temperatura <= 37:
    print("temperatura normal")
elif temperatura <=37.8:
    print("febril")
elif temperatura <= 38.5:
    print("febre leve")
elif temperatura <= 39.4:
    print("febre moderada")
else:
    print ("febre grave")
    
    
    
