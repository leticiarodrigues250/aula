salario = float(input('informe o seu salário:'))

if salario <= 1000:
    salario = salario*1.15
elif salario > 1000 and salario <= 3000:
    salario = salario*1.1
else:
    salario = salario*1.05

print(f'Seu salario reajustado é de R${salario:.2f}')




